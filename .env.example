# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_MAX=100

# Storage Paths
# Default storage location (used if no custom downloadPath is specified in API request)
# All downloads will be saved to {STORAGE_PATH}/downloads by default
STORAGE_PATH=./storage

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_MAX_BROWSERS=5
PUPPETEER_TIMEOUT=150000

# Download Configuration
MAX_CONCURRENT_DOWNLOADS=3
DEFAULT_FORMAT=cbz
DOWNLOAD_RETENTION_DAYS=7
# Note: You can also specify a custom download location per request via the API:
# POST /api/v1/downloads with body: { ..., "downloadPath": "/custom/path" }
# The downloadPath can be anywhere on the filesystem (absolute or relative paths are supported)

# Logging
LOG_LEVEL=info

# Security
REQUIRE_API_KEY=false
API_KEY=
